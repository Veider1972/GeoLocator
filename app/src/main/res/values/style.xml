<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    // Font style
    <style name="BaseTextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/black_100</item>
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="ItemMarkTitle" parent="BaseTextAppearance">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="ItemMarkDesc" parent="BaseTextAppearance">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/black_60</item>
    </style>

    <style name="ItemMarkCoordinates" parent="BaseTextAppearance">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">14sp</item>
    </style>

    //Buttons

    <style name="Button" parent="Widget.MaterialComponents.Button">
        <item name="android:minHeight">48dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:padding">12dp</item>
        <item name="android:textAllCaps">true</item>
        <item name="autoSizeStepGranularity">1sp</item>
        <item name="android:maxLines">1</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="cornerRadius">@dimen/corner_10dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/black_100</item>
        <item name="backgroundTint">@color/purple_200</item>
    </style>

</resources>